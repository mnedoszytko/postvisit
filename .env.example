APP_NAME=PostVisit
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://postvisit.test

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=postvisit
DB_USERNAME=postgres
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false

SANCTUM_STATEFUL_DOMAINS=postvisit.test

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
UPLOAD_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

MAIL_MAILER=resend
MAIL_FROM_ADDRESS="postvisit@resend.dev"
MAIL_FROM_NAME="${APP_NAME}"

# S3-compatible storage (DigitalOcean Spaces, etc.) — required when UPLOAD_DISK=s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false
# AWS_ENDPOINT=
# AWS_URL=

VITE_APP_NAME="${APP_NAME}"

# Anthropic AI (required for chat, analysis, term extraction)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-opus-4-6
# ANTHROPIC_CACHE_TTL=5m

# OpenAI (Whisper STT — required for voice recording transcription)
OPENAI_API_KEY=
# WHISPER_MODEL=whisper-1
# STT_PROVIDER=whisper

# Resend (transactional email)
RESEND_API_KEY=

# PostVisit features
DEMO_LOGIN_ENABLED=true
# CONTEXT_COMPACTION_ENABLED=false

# Audio backup (local filesystem path for voice recording backups)
AUDIO_BACKUP_PATH=/tmp/postvisit-audio-backups

# ElevenLabs (Text-to-Dialogue TTS for demo — optional)
# ELEVENLABS_API_KEY=

# FAL.ai (AI image generation for demo photos — optional)
# FAL_KEY=

# Slack alerts (abuse monitoring — webhook URL for #vps-agents or similar)
SLACK_WEBHOOK_URL=

# Herd Expose (for mobile testing via herd share — optional)
# EXPOSE_TOKEN=
